<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/category_background"
        android:layout_width="match_parent"
        android:alpha="0.7"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/category_background"
        android:layout_alignTop="@+id/category_background"
        android:layout_alignRight="@+id/category_background"
        android:layout_alignBottom="@+id/category_background"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:shadowColor="#000000"
        android:shadowRadius="15" />
</RelativeLayout>